{
  "name": "writersroom-regression-tests",
  "version": "1.0.0",
  "description": "Regression test suite for WritersRoom memory storage fix",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:duplicate": "jest duplicate-sluglines.test.ts",
    "test:memory": "jest memory-storage-composite-keys.test.ts",
    "test:e2e": "jest end-to-end-pipeline-validation.test.ts",
    "test:performance": "jest performance-stability.test.ts",
    "test:ground-truth": "jest sr-first-look-ground-truth.test.ts",
    "test:all": "npm run test:duplicate && npm run test:memory && npm run test:e2e && npm run test:performance && npm run test:ground-truth",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "validate": "npm run test:ground-truth -- --verbose"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "./jest.config.js"
  }
}